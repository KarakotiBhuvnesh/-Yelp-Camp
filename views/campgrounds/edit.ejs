<% layout('/layout/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method = "POST">
            <div class="mb-3">
                <label class="form-label" for="title" > Title </label>
                <input class="form-control" type="text" id="title" name="campgrounds[title]" value="<%= campground.title %>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="location"> location </label>
                <input class="form-control" type="text" id="location" name="campgrounds[location]" value="<%= campground.location %>">
            </div>

            <div class="mb-3">
                <label class="form-label" for="image"> Image URL </label>
                <input class="form-control" type="text" id="image" name="campgrounds[image]" value="<%= campground.image %>">
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="Price"> Price </label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="Price" 
                    aria-describedby="price-label" name="campgrounds[price]" value="<%= campground.price %>">
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description"> Description </label>
                <textarea class="form-control" type="text" id="description" name="campgrounds[description]"><%= campground.description %></textarea>
            </div>

            <button class="btn btn-success">Edit Campground</button>
        </form>
    
        <a href="/campgrounds">Back to Campgrounds</a>
    </div>
</div>